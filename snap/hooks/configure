#!/bin/sh -e

NOW=$(date +"%d-%m-%Y %T")

LOG=$SNAP_DATA/configure.log

echo "-- $NOW --" >> $LOG

echo "Starting configuration..." >> $LOG

cd $SNAP

pwd >> $LOG

./bin/update_gwid.sh ./bin/local_conf.json >> $LOG

./driver/reset_lgw.sh stop >> $LOG
./driver/reset_lgw.sh start >> $LOG

echo "Done! \n" >> $LOG
